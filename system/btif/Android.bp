        "lib-bt-packets-avrcp",
        "lib-bt-packets-base",
        "libaudio-a2dp-hw-utils",
        "libbt-audio-hal-interface",
        "libbt-stack",
        "libbt-stack-core",
        "libbtif-core",
    ],
    cflags: [
        "-DBUILDCFG",
    ],
    host_supported: true,
    min_sdk_version: "Tiramisu",
}

